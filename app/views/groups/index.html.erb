
<h1>ORGANISATION</h1>
<div class="jumbotron">
    <p id="notice"><%= notice %></p>
  <div class="container">
      <div>
<h2>Listing des Groupes</h2></div>
<div class="btn btn-default">
<h4><%= link_to 'New Group', new_group_path %></h4>
</div>
<div class="btn btn-default">
    <h4><%= link_to 'Random', randomGroup_path %></h4>
</div>
<div>
    <br>
    <div class="container">
<% @groups.each do |group| %>
<div class="col-xs-4 panel panel-info">
    <br>
<div  class="panel panel-info panel-heading ">
    <h4>Nom du groupe : <%= group.name %></h4>
    <h4>Salle : <%= group.salle%></h4>
    <h4>TÃ¢che : <%= group.tache %></h4>
    <div class="btn btn-default">
    <h4><%= link_to 'Edit', edit_group_path(group) %></h4>
</div>
<div class="btn btn-default">
    <h4><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></h4>
</div>
</div>
<div  class="panel  panel-info panel-body">
    <% @people.each do |person| %>
      <% if person.group_id == group.id %>
      <% if person.sensei == true %>
        <div class="panel"><span class="sensei"><%= person.name %></span><%= best_in_place person, :sensei, :as => :select, :collection => {"1" => " => sensei", "2" => ""} %></div>
        <% else %>
        <div class="panel panel"><%= person.name %><%= best_in_place person, :sensei, :as => :select, :collection => {"1" => " => sensei"} %></div>


        <% end %>
      <% end %>
    <% end %>
</div>

</div>
<% end %>
</div>
</div>
</div>
</div>


<div class="jumbotron">
  <div class="container">
     <div>
<h2>Listing des Personnes</h2>
</div>

    <div class="table-responsive">
  <table class="table">
      <tr>
    <h3>Noms :</h3>
</tr>

    <% @people.each do |person| %>
<td>
        <div><h4><%= best_in_place person, :name %></h4></div>
    <% end %>
    <td>
</table>
<br>

</div>
</div>
</div>
<script type="text/javascript">
$(document).ready(function() {
/* Activating Best In Place */
jQuery(".best_in_place").best_in_place();
});
</script>
